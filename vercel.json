{
  "version": 2,
  "builds": [
    {
      "src": "frontend/tsconfig.json",
      "use": "@vercel/node",
      "config": {
        "command": "tsc && cp -r frontend/src frontend/dist && cp frontend/public/* frontend/dist"
      }
    },
    {
      "src": "frontend/dist/**/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "frontend/dist/index.js"
    }
  ]
}
